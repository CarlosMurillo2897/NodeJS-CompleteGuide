<main>
    {{#if hasProducts }}
        <div class="grid">
            {{#each prods}}
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">{{this.title}}</h1>
                </header>
                <div class="card__image">
                    <img src="https://cdn.pixaboy.com/photo/2016/03/31/20/51/book-1296045_960_7" alt="Book image">
                </div>
                <div class="card__content">
                    <h2 class="product__price">119.99</h2>
                    <p class="product__description">A very intereseting book about so many events.</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to Cart</button>
                </div>
            </article>
            {{/each}}
        </div>
    {{ else }}
        <h1>No Products Found!</h1>
    {{/if}}
</main>